<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/material_helper_text_font_1_3_padding_horizontal"
    android:layout_marginEnd="@dimen/material_helper_text_font_1_3_padding_horizontal"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="PrivateResource">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="7dp"
        app:cardElevation="22dp">
        <LinearLayout
            android:id="@+id/item_container"
            android:padding="5dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/rv_image"
                android:contentDescription="@string/electronics"
                android:scaleType="fitCenter"
                android:layout_width="70dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rv_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/samsung_electronics_galaxy_tab_s7_fe_2021_android_tablet_12_4_screen_wifi_256gb_s_pen_included_long_lasting_battery_powerful_performance_mystic_black"
                    android:fontFamily="sans-serif-black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/rv_price"
                    android:layout_marginTop="4dp"
                    android:text="@string/price_35"
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/rv_color"
                    android:layout_marginTop="4dp"
                    android:text="@string/color_black"
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>